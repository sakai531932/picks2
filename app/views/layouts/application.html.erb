<!DOCTYPE html>
<html>
  <head>
    <title>Picks2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <script src="https://js.pay.jp/", type="text/javascript"></script>
    
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    
     <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to root_path do %>
          <span><%= image_tag "picks_logo.png", class: "navbar-brand" %></span>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <%= link_to "TALK-LIST", {controller: :relationships, action: :talk_list, user_id: current_user.id}, method: :get %>
            </li>
            <li>
              <% if @profile.blank? %>
                <%= link_to new_profile_path do %>
                  <%= image_tag "icons/profile.jpeg" %>
                <% end %>
              <% end %>
            </li>
            <li>
              <% if @profile.present? %>
                <%= link_to edit_profile_path(current_user.id) do %>
                  <%= image_tag "icons/edit.jpeg" %>
                <% end %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <%= image_tag "icons/logout.png" %>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_registration_path do %>
                <%= image_tag "icons/register.png" %>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
                <%= image_tag "icons/login.png" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    
    <%= yield %>
    <script>
    $(function(){
    $(".alert").fadeOut(5000);
    });
    </script>
  </body>
</html>
