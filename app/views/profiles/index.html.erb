<div class="profile-index-wrapper">
  <div class="container">
    <% @profiles.each do |profile| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="profile-index-single">
            <h2 class="prifile-author">
              <%= profile.nickname %>
            </h2>
            <%= image_tag profile.image.url %>
　　　　　　<%= link_to 'レビューを表示', review_path(profile.id), method: :GET %>
　　　　　　
            <% if !current_user.following?(profile.user) and !profile.user.following?(current_user) %>
              <%= link_to 'フォローする', follow_path(profile.user.id), method: :POST %>
            <% end %>
            
            <%= link_to '購入', new_card_path, method: :GET %>

            <p class="profile-text">
              <%= profile.introduction %>
              <%= profile.age %>
              <%= profile.price %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>